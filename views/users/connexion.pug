extends ../layout

block content
  div.containerLogin(class="jumbotron vertical-center text-center")
    h1(class="display-3") Connexion
    br

    if error
      div.containerErr(class="alert alert-danger")
        p= errorMsg

    form(method='POST' action='/login')
        div.form-group
            label(for='email') Email
                input.form-control(type='text' id='email' placeholder='Email' name='email')
            br
            label(for='password') Password
                input.form-control(type='password' id='password' placeholder='Mot de passe' name='password')
        button(type='submit' class="btn btn-primary") Connexion